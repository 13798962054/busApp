
button:not([size='mini']){
  width: 100%;
}

#postButton{
  background:linear-gradient(35deg, #33193d 0%, #0066a4 70%, #0066a4 100%);
  margin: 20rpx;
  width: 712rpx;
}

.item{
  position: relative;
  padding: 20rpx;
  background: linear-gradient(30deg, #33193d 0%, #7e3d90 80%, #7e3d90 100%);
  width: 672rpx;
  border-radius: 10rpx;
  color: #fff;
  margin: 20rpx;
  height: 320rpx; 
  line-height: 80rpx;
}

.personalIcon{
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  float: left;
}

.personalIcon image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.info{
  float: left;
  margin-left: 80rpx;
}

.deleteIcon{
  position: absolute;
  right: 40rpx;
  top: 20rpx;  
  width: 75rpx;
  height: 75rpx;
  /* overflow: hidden; */
  /* background-color: #0f1; */
  text-align: center;
}
.deleteIcon button{
  position: relative;

  border-radius: 50%;
  text-align: center;
  color: #f22;
  background: linear-gradient(35deg, #33193d 0%, #0066a4 70%, #0066a4 100%);
}
.deleteIcon button span{
  position: relative;
  left: -10rpx;
}
.fromTo{
  clear: both;
}